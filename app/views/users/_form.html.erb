<%= form_for @user  do |f| %>
  <p>
    Name <br>
    <%= f.text_field :name %>
  </p>

  <p>
    Height (in inches) <br>
    <%= f.text_field :height %>
  </p>

  <p>
    How happy are you? (1-5 scale) <br>
    <%= f.text_field :happiness %>
  </p>

  <p>
    How nauseous are you? (1-5 scale) <br>
    <%= f.text_field :nausea %>
  </p>

  <p>
    How many dollars are in your pocket? <br>
    <%= f.text_field :tickets %>
  </p>

  <p>
    Check box if you are a theme park owner
    <%= f.check_box :admin %>
  </p>
  <p>
    <%= f.submit 'Create User' %>
  </p>
<% end %>
