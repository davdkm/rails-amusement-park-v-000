
<div class="center">

  <div class="pic">
    <img src="http://8900-presscdn-0-84.pagely.netdna-cdn.com/wp-content/themes/beautycon/assets/img/avatar-grey.png" height="250">
  </div>
  <div class="info">
    <% if @user.admin %>
      <p>
        <b>ADMIN</b>
      </p>
    <% end %>
    <p>
      Name: <%= @user.name %>
    </p>
    <p>
      Tickets: <%= @user.tickets %>
    </p>
    <p>
      Mood: <%= @user.mood %>
    </p>
    <p>
      Height: <%= @user.height %>
    </p>
    <p>
      <%= link_to 'Edit', edit_user_path(@user) %>
    </p>
    <p>
      <%= link_to 'See attractions', attractions_path %>
    </p>
  </div>
</div>
